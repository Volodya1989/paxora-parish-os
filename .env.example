DATABASE_URL=postgresql://postgres:postgres@localhost:5432/paxora?schema=public
NEXTAUTH_SECRET=replace-me
NEXTAUTH_URL=http://localhost:3000

# Sentry (IOS-C1)
# Required in deployed environments for error/crash visibility.
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_ENVIRONMENT=development
NEXT_PUBLIC_SENTRY_ENVIRONMENT=development
SENTRY_RELEASE=
NEXT_PUBLIC_SENTRY_RELEASE=
# Optional performance tracing sample rate (0.0 - 1.0). Keep at 0 for low-noise default.
SENTRY_TRACES_SAMPLE_RATE=0
NEXT_PUBLIC_SENTRY_TRACES_SAMPLE_RATE=0

# Product analytics (Roadmap Item 10)
# Toggle off instantly by setting NEXT_PUBLIC_ANALYTICS_ENABLED=false
NEXT_PUBLIC_ANALYTICS_ENABLED=false
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

CLOUDFLARE_ACCOUNT_ID=your-account-id
CLOUDFLARE_R2_BUCKET=your-bucket-name
CLOUDFLARE_R2_ACCESS_KEY_ID=your-r2-access-key
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your-r2-secret
CLOUDFLARE_R2_ENDPOINT=https://<accountid>.r2.cloudflarestorage.com
# Optional CDN/public base URL for direct object access
CLOUDFLARE_R2_PUBLIC_URL=https://cdn.example.com

# iOS native shell mode (set true in Capacitor iOS builds)
NEXT_PUBLIC_IOS_NATIVE_SHELL=false
# iOS donation-link strategy: allow | hide_in_ios_native
NEXT_PUBLIC_IOS_SAFE_GIVING_STRATEGY=allow

# Greetings cron (Vercel Hobby runs once per day)
GREETINGS_CRON_UTC_HOUR=14
GREETINGS_CRON_UTC_MINUTE=0
